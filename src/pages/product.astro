---
import Layout from '~/layouts/PageLayout.astro';

const { on } = Astro;

const metadata = {
    title: 'AstroWind — Free template for creating websites with Astro + Tailwind CSS',
    ignoreTitleTemplate: true,
};
let currentIndex = 0;
        const imageArray = [
            'https://i.postimg.cc/0jwyVgqz/Microprocessor1-removebg-preview.png',
            'https://i.postimg.cc/Z5KhRkD6/download-1-removebg-preview.png',
            'https://i.postimg.cc/8kJBrw03/download-removebg-preview.png',
            'https://i.postimg.cc/0N4Kk1PN/black-microprocessors-removebg-preview.png',
        ];

        function handlePrevClick() {
            currentIndex = (currentIndex - 1 + imageArray.length) % imageArray.length;
            updateImage();
        }

        function handleNextClick() {
            currentIndex = (currentIndex + 1) % imageArray.length;
            updateImage();
        }

        function handleImageClick() {
            alert(`Clicked on image ${currentIndex + 1}`);
        }

        function updateImage() {
            const productImage = document.getElementById('productImage');
            if (productImage instanceof HTMLImageElement) {
                productImage.src = imageArray[currentIndex];
            }
        }
